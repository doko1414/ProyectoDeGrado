@using Microsoft.AspNetCore.Components.Authorization
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
         <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p>Por favor, espere mientras autorizamos el usuario</p>
                </Authorizing>
                <NotAuthorized>
                    <PersonalizacionProyectoGradoWASM.Pages.RedireccionarAlAcceso />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Error, no se encuentra nada en esta dirección</p>
            </LayoutView>
        </NotFound>
    </Router>

</CascadingAuthenticationState>